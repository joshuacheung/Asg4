#!/usr/bin/perl
use strict;
use warnings;

my @inputs;

my $makefile = "test1";
open my $fh, '<', $makefile or die "Cannot open file : $_"; #file handler
use Data::Dumper;


while(my $line = <$fh>){
  chomp $line; #gets rid of whitespace
  push(@inputs, $line);
}

sub parse_dep ($) {
   my ($line) = @_;
    return undef unless $line =~ m/^(\S+)\s*:\s*(.*?)\s*$/;
    my ($target, $dependency) = ($1, $2);
    my @dependencies = split m/\s+/, $dependency;
    return $target, \@dependencies;
}


my %graph;
my %comgraph;
my @commands;


for my $input (@inputs) {
   my ($target, $deps) = parse_dep $input;
   if($input=~ "\t"){
     $input =~ s/\t|\n//g;
     print "$input\n";
     #$commands = push $input;
     #print"$com\n";
   }
   if(defined $target && defined $com){
     \@commands;
     $graph{$target} = $deps;
     $comgraph{$target} = $commands;
   }elsif(defined $target){
      $graph{$target} = $deps;
    }else{
      print "";
    }
}

print Dumper(\%graph);
